<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:background="@drawable/blankpage" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/user_icon" android:layout_width="200dp" android:layout_height="100dp" android:layout_marginTop="76dp" android:src="@drawable/user_icon" android:layout_alignRight="@+id/demoAlbum" android:layout_alignParentTop="true" android:contentDescription="@string/img_desc"/>
        <EditText android:textSize="30sp" android:gravity="center" android:id="@+id/username" android:background="@drawable/login_text_box" android:layout_width="280dp" android:layout_height="50dp" android:layout_marginTop="10dp" android:hint="@string/album_id" android:ems="10" android:layout_below="@+id/user_icon" android:layout_centerHorizontal="true">
            <requestFocus/>
        </EditText>
        <EditText android:textSize="30sp" android:gravity="center" android:id="@+id/pasword" android:background="@drawable/password_text_box" android:layout_width="280dp" android:layout_height="50dp" android:layout_marginTop="18dp" android:hint="@string/Password" android:ems="10" android:layout_below="@+id/username" android:layout_alignLeft="@+id/username" android:inputType="textPassword" android:onClick=""/>
        <Button android:id="@+id/demoAlbum" android:background="@drawable/demo_album" android:layout_width="220dp" android:layout_height="42dp" android:layout_marginTop="27dp" android:layout_below="@+id/loginButton" android:layout_centerHorizontal="true"/>
        <Button android:id="@+id/loginButton" android:background="@drawable/login_button" android:layout_width="220dp" android:layout_height="42dp" android:layout_marginTop="40dp" android:layout_below="@+id/pasword" android:layout_alignRight="@+id/user_icon" android:onClick="loginPost"/>
        <GridView android:id="@+id/gridViewMainPage" android:paddingLeft="2dp" android:paddingTop="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="150dp" android:listSelector="@android:color/transparent" android:horizontalSpacing="2dp" android:verticalSpacing="2dp" android:numColumns="3" android:layout_below="@+id/demoAlbum"/>
    </RelativeLayout>
</ScrollView>
